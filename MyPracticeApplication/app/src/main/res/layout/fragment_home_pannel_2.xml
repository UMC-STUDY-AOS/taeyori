<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_home_pannel_2_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/home_pannel_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_pannel_2_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_pannel_2_first_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_album_exp3"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/home_pannel_2_first_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Level"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toTopOf="@id/home_pannel_2_first_singer_tv"
                app:layout_constraintStart_toEndOf="@id/home_pannel_2_first_iv"
                app:layout_constraintTop_toTopOf="@id/home_pannel_2_first_iv"/>

            <TextView
                android:id="@+id/home_pannel_2_first_singer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AESPA"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/home_pannel_2_first_iv"
                app:layout_constraintTop_toBottomOf="@id/home_pannel_2_first_title_tv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_pannel_2_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_pannel_2_second_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_album_exp4"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/home_pannel_2_second_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAP OF THE SOUL : PERSONA"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toTopOf="@id/home_pannel_2_second_singer_tv"
                app:layout_constraintStart_toEndOf="@id/home_pannel_2_second_iv"
                app:layout_constraintTop_toTopOf="@id/home_pannel_2_second_iv"/>

            <TextView
                android:id="@+id/home_pannel_2_second_singer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTS"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/home_pannel_2_second_iv"
                app:layout_constraintTop_toBottomOf="@id/home_pannel_2_second_title_tv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>